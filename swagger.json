{
  "swagger": "2.0",
  "info": {
    "title": "Books Inventory API",
    "description": "API documentation for BooksInventory project",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/authors": {
      "get": {
        "tags": ["Authors"],
        "description": "Get all authors",
        "responses": { "200": { "description": "List of authors" } }
      },
      "post": {
        "tags": ["Authors"],
        "description": "Create an author",
        "parameters": [
          {
            "in": "body",
            "name": "author",
            "schema": {
              "type": "object",
              "properties": { "name": { "type": "string" } },
              "required": ["name"]
            }
          }
        ],
        "responses": { "201": { "description": "Author created" } }
      }
    },
    "/authors/{id}": {
      "get": {
        "tags": ["Authors"],
        "description": "Get a single author by ID",
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": { "200": { "description": "Author found" } }
      },
      "put": {
        "tags": ["Authors"],
        "description": "Update an author",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "in": "body",
            "name": "author",
            "schema": {
              "type": "object",
              "properties": { "name": { "type": "string" } }
            }
          }
        ],
        "responses": { "204": { "description": "Author updated" } }
      },
      "delete": {
        "tags": ["Authors"],
        "description": "Delete an author",
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": { "204": { "description": "Author deleted" } }
      }
    },

    "/books": {
      "get": {
        "tags": ["Books"],
        "description": "Get all books",
        "responses": { "200": { "description": "List of books" } }
      },
      "post": {
        "tags": ["Books"],
        "description": "Create a new book",
        "parameters": [
          {
            "in": "body",
            "name": "book",
            "schema": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "authorId": { "type": "string" },
                "genre": { "type": "string" },
                "price": { "type": "number" },
                "year": { "type": "number" }
              },
              "required": ["title", "authorId"]
            }
          }
        ],
        "responses": { "201": { "description": "Book created" } }
      }
    },
    "/books/{id}": {
      "get": {
        "tags": ["Books"],
        "description": "Get a book by ID",
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": { "200": { "description": "Book found" } }
      },
      "put": {
        "tags": ["Books"],
        "description": "Update a book",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "in": "body",
            "name": "book",
            "schema": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "genre": { "type": "string" },
                "price": { "type": "number" },
                "year": { "type": "number" }
              }
            }
          }
        ],
        "responses": { "204": { "description": "Book updated" } }
      },
      "delete": {
        "tags": ["Books"],
        "description": "Delete a book",
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": { "204": { "description": "Book deleted" } }
      }
    },

    "/stores": {
      "get": {
        "tags": ["Stores"],
        "description": "Get all stores",
        "responses": { "200": { "description": "List of stores" } }
      },
      "post": {
        "tags": ["Stores"],
        "description": "Create a new store",
        "parameters": [
          {
            "in": "body",
            "name": "store",
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "location": { "type": "string" },
                "contact": { "type": "string" }
              },
              "required": ["name"]
            }
          }
        ],
        "responses": { "201": { "description": "Store created" } }
      }
    },
    "/stores/{id}": {
      "get": {
        "tags": ["Stores"],
        "description": "Get store by ID",
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": { "200": { "description": "Store found" } }
      },
      "put": {
        "tags": ["Stores"],
        "description": "Update store",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "in": "body",
            "name": "store",
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "location": { "type": "string" },
                "contact": { "type": "string" }
              }
            }
          }
        ],
        "responses": { "204": { "description": "Store updated" } }
      },
      "delete": {
        "tags": ["Stores"],
        "description": "Delete store",
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": { "204": { "description": "Store deleted" } }
      }
    },

    "/subscriber": {
      "get": {
        "tags": ["Subscriber"],
        "description": "Get all subscribers",
        "responses": { "200": { "description": "List of subscribers" } }
      },
      "post": {
        "tags": ["Subscriber"],
        "description": "Register a new subscriber",
        "parameters": [
          {
            "in": "body",
            "name": "subscriber",
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "email": { "type": "string" },
                "subscriptionDate": { "type": "string", "format": "date" }
              },
              "required": ["email"]
            }
          }
        ],
        "responses": { "201": { "description": "Subscriber created" } }
      }
    },
    "/subscriber/{id}": {
      "get": {
        "tags": ["Subscriber"],
        "description": "Get subscriber by ID",
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": { "200": { "description": "Subscriber found" } }
      },
      "put": {
        "tags": ["Subscriber"],
        "description": "Update subscriber",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "in": "body",
            "name": "subscriber",
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "email": { "type": "string" }
              }
            }
          }
        ],
        "responses": { "204": { "description": "Subscriber updated" } }
      },
      "delete": {
        "tags": ["Subscriber"],
        "description": "Delete subscriber",
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": { "204": { "description": "Subscriber deleted" } }
      }
    }
  }
}
