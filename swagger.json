{
  "swagger": "2.0",
  "info": {
    "title": "Books Inventory API",
    "description": "API documentation for BooksInventory project",
    "version": "1.0.0"
  },
  "host": "team4-bookstore-project2025.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {
    "/books": {
      "get": {
        "tags": ["Books"],
        "description": "Get all books",
        "responses": { "200": { "description": "List of books" } }
      },
      "post": {
        "tags": ["Books"],
        "description": "Create a new book",
        "parameters": [
          {
            "in": "body",
            "name": "book",
            "schema": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "authorId": { "type": "string" },
                "author": { "type": "string" },
                "genre": { "type": "string" },
                "price": { "type": "number" },
                "year": { "type": "number" }
              },
              "required": ["title", "authorId"]
            }
          }
        ],
        "responses": { "201": { "description": "Book created" } }
      }
    },

    "/stores": {
      "get": {
        "tags": ["Stores"],
        "description": "Get all stores",
        "responses": { "200": { "description": "List of stores" } }
      },
      "post": {
        "tags": ["Stores"],
        "description": "Create a new store",
        "parameters": [
          {
            "in": "body",
            "name": "store",
            "schema": {
              "type": "object",
              "properties": {
                "owner": { "type": "string" },
                "location": { "type": "string" },
                "phone": { "type": "string" },
                "email": { "type": "string" }
              },
              "required": ["owner", "location"]
            }
          }
        ],
        "responses": { "201": { "description": "Store created" } }
      }
    },

    "/subscriber": {
      "get": {
        "tags": ["Subscriber"],
        "description": "Get all subscribers",
        "responses": { "200": { "description": "List of subscribers" } }
      },
      "post": {
        "tags": ["Subscriber"],
        "description": "Register a new subscriber",
        "parameters": [
          {
            "in": "body",
            "name": "subscriber",
            "schema": {
              "type": "object",
              "properties": {
                "subscribername": { "type": "string" },
                "email": { "type": "string" },
                "role": { "type": "string" },
                "accessToken": { "type": "string" }
              },
              "required": ["email", "subscribername"]
            }
          }
        ],
        "responses": { "201": { "description": "Subscriber created" } }
      }
    }
  }
}
